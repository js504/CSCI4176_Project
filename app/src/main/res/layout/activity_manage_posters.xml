<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.geobullet.csci_4176_project.Manage_Posters">


    <TextView
        android:id="@+id/viewBoards"
        android:layout_width="177dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Boards: "
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewPostre"
        android:layout_width="184dp"
        android:layout_height="37dp"
        android:layout_marginTop="31dp"
        android:text="Your Posters: "
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/boardSpinner"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/create_new_poster"
        android:layout_width="208dp"
        android:layout_height="63dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="27dp"
        android:text="Create New Poster"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.333"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteY="444dp"
        tools:layout_editor_absoluteX="67dp" />

    <Spinner
        android:id="@+id/boardSpinner"
        android:layout_width="371dp"
        android:layout_height="34dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/viewBoards" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="374dp"
        android:layout_height="288dp"
        android:layout_below="@+id/viewBoards"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPostre" />


</android.support.constraint.ConstraintLayout>
